<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white"
    tools:context=".fragments.missingchild.AddMissingChildFragment">
    <include layout="@layout/background_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>

        <ScrollView
            app:layout_constraintTop_toBottomOf="@id/tool_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingStart="@dimen/size200"
                android:paddingEnd="@dimen/size200"
                android:paddingBottom="@dimen/size5"
                android:layout_height="wrap_content">
                <RelativeLayout
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/rl_image">


                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_missing_profile"
                        android:layout_width="@dimen/size100"
                        android:layout_height="@dimen/size100"
                        android:layout_margin="@dimen/gape10"
                        app:roundAsCircle="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/upload_profile_green"
                        app:actualImageScaleType="centerCrop"
                        app:roundingBorderColor="@color/colorPrimary"
                        app:roundingBorderWidth="@dimen/size1"/>
                    <ImageView
                        android:id="@+id/img_missing_photoUpload"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:layout_marginBottom="@dimen/size5"
                        android:layout_alignBottom="@id/sdv_missing_profile"
                        android:layout_alignEnd="@id/sdv_missing_profile"
                        android:layout_alignRight="@id/sdv_missing_profile"
                        android:src="@drawable/ic_photo_upload"/>
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/flMissingFirstName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/rl_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingFirstName"
                        android:imeOptions="actionNext"
                        android:inputType="textCapWords|textPersonName"
                        android:layout_marginTop="@dimen/gape10"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/firstname"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flMissingLastName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingLastName"
                        android:imeOptions="actionDone"
                        android:inputType="textCapWords|textPersonName"
                        android:layout_marginTop="@dimen/gape10"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/lastname"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flMissingBirthDate"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingBirthDate"
                        android:layout_marginTop="@dimen/gape10"
                        android:focusableInTouchMode="false"
                        android:editable="false"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/str_birth_date"
                        style="@style/hintStyle" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flMissingSince"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingSince"
                        android:background="@drawable/edittext_white_back"
                        android:layout_marginTop="@dimen/gape10"
                        android:editable="false"
                        android:singleLine="true"
                        android:focusableInTouchMode="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/str_missing_since_prompt"
                        style="@style/hintStyle" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flMissingFrom"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingSince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingFrom"
                        android:layout_marginTop="@dimen/gape10"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:editable="false"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/str_missing_from_prompt"
                        style="@style/hintStyle" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/flMissingAge"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingFrom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingAge"
                        android:layout_marginTop="@dimen/gape10"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="3"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/str_missing_age_prompt"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flMissingSituation"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etMissingSituation"
                        android:layout_marginTop="@dimen/gape10"
                        android:imeOptions="actionNext"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:lines="3"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        style="@style/hintStyle"
                        android:text="@string/str_missing_situation_prompt" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flContactNumber"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flMissingSituation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_mob"
                        android:layout_marginTop="@dimen/gape10"
                        android:paddingTop="@dimen/size5"
                        android:paddingBottom="@dimen/size5"
                        android:paddingStart="@dimen/gape10"
                        android:paddingEnd="@dimen/size20"
                        android:background="@drawable/button_without_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/textSize18"
                            android:paddingStart="@dimen/size5"
                            android:paddingEnd="@dimen/size2"
                            android:id="@+id/tvCountrySelected"
                            android:layout_alignBottom="@id/etMissingPhone"
                            android:layout_alignTop="@id/etMissingPhone"
                            android:layout_width="@dimen/space_super_extra_large_x_jumbo"
                            android:layout_height="match_parent"/>
                        <View
                            android:id="@+id/viewDividerForgot"
                            android:layout_width="@dimen/size1"
                            android:layout_alignBottom="@id/etMissingPhone"
                            android:layout_alignTop="@id/etMissingPhone"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="@dimen/size2"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_marginEnd="@dimen/size2"
                            android:layout_toEndOf="@id/tvCountrySelected"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/etMissingPhone"
                            android:padding="@dimen/gape10"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColorHint="@color/grayText"
                            android:imeOptions="actionNext"
                            android:drawablePadding="@dimen/size4"
                            android:background="@color/caldroid_white"
                            android:layout_toEndOf="@id/viewDividerForgot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:text="@string/str_missing_phone_prompt"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flHairColor"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etHairColor"
                        android:layout_marginTop="@dimen/gape10"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/str_missing_hair_prompt"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flEyeColor"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flHairColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etEyeColor"
                        android:layout_marginTop="@dimen/gape10"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/str_missing_eye_prompt"
                        style="@style/hintStyle" />
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/llHW"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flEyeColor"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/flHeight"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:paddingRight="@dimen/size5"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/etHeight"
                            android:layout_marginTop="@dimen/gape10"
                            android:imeOptions="actionNext"
                            android:singleLine="true"
                            android:inputType="numberDecimal"
                            android:background="@drawable/edittext_white_back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            style="@style/hintStyle"
                            android:text="@string/str_height" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/flWeight"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/size5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/etWeight"
                            android:layout_marginTop="@dimen/gape10"
                            android:imeOptions="actionNext"
                            android:inputType="numberDecimal"
                            android:singleLine="true"
                            android:background="@drawable/edittext_white_back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            style="@style/hintStyle"
                            android:text="@string/str_weight" />
                    </FrameLayout>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/flComplexion"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/llHW"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etComplexion"
                        android:layout_marginTop="@dimen/gape10"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        style="@style/hintStyle"
                        android:text="@string/str_missing_complexion" />
                </FrameLayout>
                <LinearLayout
                    android:id="@+id/llQuestions"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flComplexion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/bgBlack"
                            android:textSize="@dimen/textSize16"
                            android:text="@string/str_missing_spectacle"
                            android:layout_height="wrap_content"/>

                        <RadioGroup
                            android:id="@+id/rgContactGlass"
                            android:layout_width="wrap_content"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rbGlassYes"
                                android:text="@string/yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/rbGlassNo"
                                android:text="@string/no"
                                android:checked="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/bgBlack"
                            android:textSize="@dimen/textSize16"
                            android:text="@string/str_missing_teeth"
                            android:layout_height="wrap_content"/>

                        <RadioGroup
                            android:id="@+id/rgBraces"
                            android:layout_width="wrap_content"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rbTeethYes"
                                android:text="@string/yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/rbTeethNo"
                                android:text="@string/no"
                                android:checked="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_width="match_parent"
                        android:weightSum="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textSize="@dimen/textSize16"
                            android:textColor="@color/bgBlack"
                            android:text="@string/str_missing_tattoo"
                            android:layout_height="wrap_content"/>

                        <RadioGroup
                            android:id="@+id/rgPhysicalAttributes"
                            android:layout_width="wrap_content"
                            android:gravity="end"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                            <RadioButton
                                android:id="@+id/rbPhysicalYes"
                                android:text="@string/yes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <RadioButton
                                android:id="@+id/rbPhysicalNo"
                                android:text="@string/no"
                                android:checked="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>
                <FrameLayout
                    android:id="@+id/flPhysicalAttributes"
                    android:layout_marginTop="@dimen/size5"
                    android:layout_marginEnd="@dimen/size8"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/llQuestions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etPhysicalAttributes"
                        android:layout_marginTop="@dimen/gape10"
                        android:imeOptions="actionDone"
                        android:inputType="textMultiLine"
                        android:gravity="top|start"
                        android:lines="3"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        style="@style/hintStyle"
                        android:text="@string/str_missing_physical" />
                </FrameLayout>

                <Button
                    android:id="@+id/btn_add_missing_data"
                    android:textColor="@color/caldroid_white"
                    android:background="@drawable/button_back"
                    android:text="@string/submit"
                    android:textSize="@dimen/textSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/gape10"
                    app:layout_constraintTop_toBottomOf="@id/flPhysicalAttributes"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>