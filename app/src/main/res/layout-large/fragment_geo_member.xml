<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white"
    tools:context=".fragments.homefragment.boundary.GeoMemberFragment">

    <include android:id="@+id/tool_bar"
        layout="@layout/toolbar_header"/>

    <FrameLayout
        android:id="@+id/flGeoStartDateTime"
        android:layout_marginTop="@dimen/size8"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginStart="@dimen/size220"
        android:layout_marginEnd="@dimen/size220"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etGeoStartDateTime"
            android:layout_marginTop="@dimen/gape10"
            android:focusableInTouchMode="false"
            android:background="@drawable/edittext_white_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/start_date_and_time"
            style="@style/hintStyle" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/flGeoEndDateTime"
        android:layout_marginTop="@dimen/size8"
        android:layout_marginBottom="@dimen/size2"
        android:layout_marginStart="@dimen/size220"
        android:layout_marginEnd="@dimen/size220"
        app:layout_constraintTop_toBottomOf="@id/flGeoStartDateTime"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/etGeoEndDateTime"
            android:layout_marginTop="@dimen/gape10"
            android:focusableInTouchMode="false"
            android:background="@drawable/edittext_white_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/end_date_and_time"
            style="@style/hintStyle" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/rlMember"
        app:layout_constraintTop_toBottomOf="@id/flGeoEndDateTime"
        android:background="@drawable/geo_background"
        android:layout_marginTop="@dimen/size15"
        android:layout_marginBottom="@dimen/gape10"
        android:layout_marginEnd="@dimen/size220"
        android:layout_marginStart="@dimen/size220"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/select_user"
            android:textStyle="bold"
            android:textSize="@dimen/textSize16"
            android:padding="@dimen/size5"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:padding="@dimen/size5"
            android:id="@+id/ivAddMultipleMember"
            android:src="@drawable/ic_add_multiple"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGeoMember"
            android:layout_below="@id/ivAddMultipleMember"
            android:layout_marginTop="@dimen/gape10"
            android:padding="@dimen/size5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size200"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btnAddGeoFence"
        app:layout_constraintTop_toBottomOf="@+id/rlMember"
        android:layout_marginTop="@dimen/gape10"
        android:layout_marginBottom="@dimen/gape10"
        android:layout_marginEnd="@dimen/size220"
        android:layout_marginStart="@dimen/size220"
        android:textStyle="bold"
        android:text="@string/submit"
        android:textColor="@color/caldroid_white"
        android:background="@drawable/button_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>