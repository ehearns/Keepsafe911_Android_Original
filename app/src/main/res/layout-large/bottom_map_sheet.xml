<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_map_option"
    android:background="@color/caldroid_white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:behavior_hideable="false"
    android:layout_marginEnd="@dimen/size200"
    android:layout_marginStart="@dimen/size200"
    app:behavior_peekHeight="@dimen/size50"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clMapSheet"
        android:paddingTop="@dimen/size1"
        android:paddingBottom="@dimen/size1"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvNeighbourFilter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvNeighbourFilterText"
            android:textSize="@dimen/textSize14"
            android:layout_width="0dp"
            android:paddingTop="@dimen/size12"
            android:textColor="@color/caldroid_white"
            android:gravity="center|start"
            android:paddingStart="@dimen/gape10"
            android:paddingEnd="@dimen/gape10"
            android:paddingBottom="@dimen/size12"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvNeighbourFilterText"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/textSize14"
            android:paddingTop="@dimen/size12"
            android:paddingStart="@dimen/gape10"
            android:paddingEnd="@dimen/gape10"
            android:gravity="center"
            android:paddingBottom="@dimen/size12"
            android:textColor="@color/caldroid_white"
            android:drawablePadding="@dimen/gape10"
            android:drawableStart="@drawable/ic_burger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:id="@+id/viewDivider1"
        android:layout_alignStart="@id/clMapSheet"
        android:layout_alignEnd="@id/clMapSheet"
        app:layout_constraintTop_toBottomOf="@id/clMapSheet"
        android:background="@color/caldroid_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIncidentType"
        app:layout_constraintTop_toBottomOf="@id/viewDivider1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/viewDivider2"
        android:layout_alignStart="@id/clMapSheet"
        android:layout_alignEnd="@id/clMapSheet"
        app:layout_constraintTop_toBottomOf="@id/rvIncidentType"
        android:background="@color/caldroid_gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size2"/>
    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/viewDivider2"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:paddingBottom="@dimen/gape10"
        android:paddingTop="@dimen/gape10"
        android:paddingStart="@dimen/size5"
        android:paddingEnd="@dimen/size5"
        android:layout_height="wrap_content">
        <TextView android:layout_width="0dp"
            android:id="@+id/tv24Hours"
            android:layout_weight="1"
            android:paddingTop="@dimen/size5"
            android:paddingBottom="@dimen/size5"
            android:text="@string/str_24_hours"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
            android:id="@+id/tv7days"
            android:paddingTop="@dimen/size5"
            android:paddingBottom="@dimen/size5"
            android:layout_weight="1"
            android:text="@string/str_7_days"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
            android:id="@+id/tv14Days"
            android:paddingTop="@dimen/size5"
            android:paddingBottom="@dimen/size5"
            android:layout_weight="1"
            android:text="@string/str_14_days"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
        <TextView android:layout_width="0dp"
            android:id="@+id/tv30Days"
            android:paddingTop="@dimen/size5"
            android:paddingBottom="@dimen/size5"
            android:layout_weight="1"
            android:textColor="@color/caldroid_white"
            android:background="@drawable/button_back_data"
            android:text="@string/str_30_days"
            android:textSize="@dimen/textSize14"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>