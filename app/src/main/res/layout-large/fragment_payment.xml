<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/caldroid_white"
    tools:context=".fragments.homefragment.profile.PaymentFragment">
    <include layout="@layout/background_layout"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size30"
                android:paddingBottom="@dimen/size30"
                android:paddingStart="@dimen/gape10"
                android:paddingEnd="@dimen/gape10"
                android:layout_marginStart="@dimen/size240"
                android:layout_marginEnd="@dimen/size240">
                <TextView
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/pay_method"
                    android:textColor="@color/colorDifferent"
                    android:gravity="center"
                    android:padding="@dimen/space_xm"
                    style="@style/TextAppearance.FontSemiPathView"
                    android:id="@+id/tv_payment_method"
                    android:textSize="@dimen/textSize20"/>

                <FrameLayout
                    android:id="@+id/flCustomerName"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/tv_payment_method"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edittext_white_back"
                        android:layout_marginTop="@dimen/gape10"
                        android:textSize="@dimen/textSize18"
                        android:focusable="false"
                        android:editable="false"
                        android:singleLine="true"
                        android:id="@+id/ed_customer_name"/>
                    <TextView
                        android:text="@string/customer_name"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flCardNumber"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/flCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:editable="false"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_marginTop="@dimen/gape10"
                        android:textSize="@dimen/textSize18"
                        android:id="@+id/ed_cardno"/>
                    <TextView
                        android:text="@string/card_number"
                        style="@style/hintStyle" />
                </FrameLayout>

                <Button
                    android:id="@+id/btn_change_card"
                    android:textColor="@color/caldroid_white"
                    android:background="@drawable/button_back"
                    android:text="@string/change_payment_card"
                    android:textSize="@dimen/textSize16"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/flCardNumber"
                    app:layout_constraintBottom_toTopOf="@id/tv_subscription"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="@string/subscription"
                    app:layout_constraintTop_toBottomOf="@id/btn_change_card"
                    android:padding="@dimen/space_xm"
                    android:layout_marginTop="@dimen/size30"
                    android:textColor="@color/colorDifferent"
                    android:gravity="center"
                    style="@style/TextAppearance.FontSemiPathView"
                    android:id="@+id/tv_subscription"
                    android:textSize="@dimen/textSize20"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:text=""
                    app:layout_constraintTop_toBottomOf="@id/tv_subscription"
                    android:padding="@dimen/space_xm"
                    android:id="@+id/tv_package"
                    android:textSize="@dimen/textSize14"/>
                <Button
                    android:id="@+id/btn_upgrade"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/button_without_back"
                    android:text="@string/upgrade_subscription"
                    android:textSize="@dimen/textSize16"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/btn_sub_history"
                    app:layout_constraintBottom_toTopOf="@id/btn_cancel"
                    />
                <Button
                    android:id="@+id/btn_sub_history"
                    android:textColor="@color/colorAccent"
                    android:background="@drawable/button_without_back"
                    android:text="@string/subscription_history"
                    android:textSize="@dimen/textSize16"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/tv_package"
                    app:layout_constraintBottom_toTopOf="@id/btn_upgrade" />
                <Button
                    android:id="@+id/btn_cancel"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_back"
                    android:text="@string/cancel_subscription"
                    android:textSize="@dimen/textSize16"
                    android:textAllCaps="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_xxm"
                    android:layout_marginStart="@dimen/space_xxm"
                    android:layout_marginEnd="@dimen/space_xxm"
                    android:layout_marginBottom="@dimen/size30"
                    app:layout_constraintTop_toBottomOf="@id/btn_upgrade"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>