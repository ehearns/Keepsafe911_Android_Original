<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white">

    <include layout="@layout/background_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>

        <ScrollView
            android:layout_width="match_parent"
            android:fillViewport="true"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/size20"
                android:layout_marginStart="@dimen/size240"
                android:layout_marginEnd="@dimen/size240"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvPaymentNote"
                    android:text=""
                    android:layout_marginLeft="@dimen/size25"
                    android:layout_marginRight="@dimen/size25"
                    android:layout_marginTop="@dimen/gape10"
                    android:textSize="@dimen/textSize16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:background="@drawable/spinner_sign_bg"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/gape10"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    android:textSize="@dimen/textSize20"
                    android:text="@string/payment_method"
                    android:layout_marginTop="@dimen/size20"
                    android:layout_marginStart="@dimen/size20"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvPaymentNote"
                    android:id="@+id/tvSelectPaymentOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


                <RelativeLayout
                    android:layout_marginTop="@dimen/size5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvPaymentNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rlCardPayment"
                        android:visibility="visible"
                        android:focusableInTouchMode="true"
                        android:layout_marginTop="@dimen/size15"
                        android:layout_margin="@dimen/size20"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvCardDetail"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/textSize16"
                            android:textColor="@color/colorDifferent"
                            android:layout_centerHorizontal="true"
                            android:text="@string/customer_detail"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_marginLeft="@dimen/gape10"
                            android:layout_height="wrap_content"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:id="@+id/ln_name"
                            android:layout_below="@+id/tvCardDetail">
                            <FrameLayout
                                android:id="@+id/flPaymentFirstName"
                                android:layout_marginTop="@dimen/size4"
                                android:layout_marginEnd="@dimen/size5"
                                android:layout_marginStart="@dimen/size8"
                                android:layout_marginBottom="@dimen/size2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/etFirstName"
                                    android:inputType="textPersonName|textCapWords"
                                    android:imeOptions="actionNext"
                                    android:singleLine="true"
                                    android:layout_marginTop="@dimen/gape10"
                                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                                    android:background="@drawable/edittext_white_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="@string/pay_firstname"
                                    style="@style/hintStyle" />
                            </FrameLayout>
                            <FrameLayout
                                android:id="@+id/flPaymentLastName"
                                android:layout_marginTop="@dimen/size4"
                                android:layout_marginEnd="@dimen/size8"
                                android:layout_marginStart="@dimen/size5"
                                android:layout_marginBottom="@dimen/size2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/etLastName"
                                    android:inputType="textPersonName|textCapWords"
                                    android:imeOptions="actionNext"
                                    android:singleLine="true"
                                    android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                                    android:layout_marginTop="@dimen/gape10"
                                    android:background="@drawable/edittext_white_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="@string/pay_lastname"
                                    style="@style/hintStyle" />
                            </FrameLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvExpireDate"
                            android:padding="@dimen/gape10"
                            android:layout_below="@id/ln_name"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/textSize16"
                            android:textColor="@color/colorDifferent"
                            android:layout_centerHorizontal="true"
                            android:text="@string/card_details"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_height="wrap_content"/>
                        <FrameLayout
                            android:id="@+id/flPaymentCardNumber"
                            android:layout_marginStart="@dimen/gape10"
                            android:layout_marginEnd="@dimen/gape10"
                            android:layout_below="@id/tvExpireDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:drawableEnd="@drawable/show_card_number"
                                android:id="@+id/etCardNumber"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:maxLength="19"
                                android:drawablePadding="@dimen/size4"
                                android:layout_marginTop="@dimen/gape10"
                                android:background="@drawable/edittext_white_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@string/card_number"
                                style="@style/hintStyle" />
                        </FrameLayout>
                        <LinearLayout
                            android:layout_below="@id/flPaymentCardNumber"
                            android:orientation="horizontal"
                            android:id="@+id/llCardMonthYear"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:id="@+id/flFreqCardMonth"
                                android:layout_marginTop="@dimen/size4"
                                android:layout_marginEnd="@dimen/size5"
                                android:layout_marginStart="@dimen/size8"
                                android:layout_marginBottom="@dimen/size2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/etCardMonth"
                                    android:inputType="number"
                                    android:imeOptions="actionNext"
                                    android:maxLength="2"
                                    android:focusableInTouchMode="false"
                                    android:layout_marginTop="@dimen/gape10"
                                    android:background="@drawable/edittext_white_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="@string/mm"
                                    style="@style/hintStyle" />
                            </FrameLayout>
                            <FrameLayout
                                android:id="@+id/flFreqCardYear"
                                android:layout_marginTop="@dimen/size4"
                                android:layout_marginEnd="@dimen/size8"
                                android:layout_marginStart="@dimen/size5"
                                android:layout_marginBottom="@dimen/size2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/etCardYear"
                                    android:inputType="number"
                                    android:imeOptions="actionNext"
                                    android:maxLength="4"
                                    android:focusableInTouchMode="false"
                                    android:layout_marginTop="@dimen/gape10"
                                    android:background="@drawable/edittext_white_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="@string/yyyy"
                                    style="@style/hintStyle" />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_below="@id/llCardMonthYear"
                            android:orientation="horizontal"
                            android:id="@+id/llCardCVV"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <FrameLayout
                                android:id="@+id/flCardCVV"
                                android:layout_marginTop="@dimen/size4"
                                android:layout_marginEnd="@dimen/size5"
                                android:layout_marginStart="@dimen/size8"
                                android:layout_marginBottom="@dimen/size2"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">
                                <EditText
                                    android:id="@+id/etCardCVV"
                                    android:inputType="number"
                                    android:imeOptions="actionDone"
                                    android:maxLength="3"
                                    android:drawableEnd="@drawable/ic_cvv"
                                    android:drawablePadding="@dimen/size4"
                                    android:layout_marginTop="@dimen/gape10"
                                    android:background="@drawable/edittext_white_back"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:text="@string/cvv"
                                    style="@style/hintStyle" />
                            </FrameLayout>
                            <TextView
                                android:id="@+id/tvCVV"
                                android:layout_gravity="center"
                                android:text="@string/what_is_cvv"
                                android:layout_weight="1"
                                android:textColor="@color/Date_bg"
                                android:textSize="@dimen/textSize16"
                                android:layout_marginTop="@dimen/size5"
                                android:layout_marginStart="@dimen/size5"
                                android:layout_marginEnd="@dimen/gape10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <Button
                            android:layout_below="@id/llCardCVV"
                            android:id="@+id/btnCardPay"
                            android:layout_marginTop="@dimen/gape10"
                            android:layout_marginStart="@dimen/gape10"
                            android:layout_marginEnd="@dimen/gape10"
                            android:textColor="@color/caldroid_white"
                            android:background="@drawable/button_back"
                            android:text="@string/add"
                            android:textAllCaps="false"
                            android:textSize="@dimen/textSize18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_note"
                            android:layout_gravity="center"
                            android:text="@string/card_note"
                            android:gravity="center"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/textSize16"
                            android:layout_below="@+id/btnCardPay"
                            android:layout_marginTop="@dimen/size5"
                            android:layout_marginStart="@dimen/gape10"
                            android:layout_marginEnd="@dimen/gape10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>