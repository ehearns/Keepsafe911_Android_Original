<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- most important is order of layers -->

    <!-- Bottom right side 2dp Shadow -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/list_backcolor" />
        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="@dimen/size5"
          android:left="@dimen/size5"
          android:top="@dimen/size5"
          android:right="@dimen/size5">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <padding android:top="@dimen/size5"
                     android:left="@dimen/size5"
                     android:bottom="@dimen/size5"
                     android:right="@dimen/size5"/>
        </shape>
    </item>
</layer-list>