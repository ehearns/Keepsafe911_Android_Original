<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/payment_failure"
    android:id="@+id/llPaymentPopUp"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivPaymentStatus"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size20"
        android:src="@drawable/ic_payment_fail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPaymentStatus"
        android:textColor="@color/bgBlack"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/textSize20"
        android:padding="@dimen/gape10"
        android:gravity="center"
        android:layout_marginTop="@dimen/gape10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvPaymentMessage"
        android:textSize="@dimen/textSize16"
        android:paddingStart="@dimen/gape10"
        android:paddingEnd="@dimen/gape10"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvTryAgain"
        android:text="@string/str_try_again"
        android:textSize="@dimen/textSize18"
        android:textColor="@color/bgBlack"
        android:gravity="center"
        android:visibility="invisible"
        android:background="@drawable/payment_try_again"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>