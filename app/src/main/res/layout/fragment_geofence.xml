<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white"
    tools:context=".fragments.homefragment.boundary.GeofenceFragment">
    <include android:id="@+id/tool_bar"
        layout="@layout/toolbar_header"/>
    <FrameLayout
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@id/ivAddGeofence"
        android:layout_height="0dp">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGeofenseList"
            android:layout_marginTop="@dimen/gape10"
            android:padding="@dimen/size5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvGeofenseListNoData"
            android:gravity="center"
            android:visibility="gone"
            android:text="@string/no_data"
            android:textColor="@color/colorDifferent"
            android:textSize="@dimen/textSize18"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <ImageButton
        android:id="@+id/ivAddGeofence"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.97"
        android:src="@drawable/ic_colored_add"
        android:layout_width="wrap_content"
        android:background="@color/caldroid_white"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>