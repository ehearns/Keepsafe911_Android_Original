<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:background="@color/caldroid_white"
    tools:context=".fragments.ForgotFragment">

    <include layout="@layout/background_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/tool_bar"
            android:layout_marginBottom="?actionBarSize"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvForgotTitle"
                android:layout_width="match_parent"
                android:text="@string/forgot_password_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/textSize24"
                android:textAlignment="center"
                android:textAllCaps="true"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvForgotDesc"
                android:text="@string/forgot_desc_title"
                android:textSize="@dimen/textSize16"
                android:gravity="center"
                android:layout_marginStart="@dimen/size30"
                android:layout_marginEnd="@dimen/size30"
                android:layout_marginTop="@dimen/size20"
                app:layout_constraintTop_toBottomOf="@id/tvForgotTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxStrokeColor="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/tvForgotDesc"
                android:id="@+id/tl_email"
                android:visibility="gone"
                android:layout_marginStart="@dimen/size20"
                android:layout_marginEnd="@dimen/gape10"
                android:layout_marginTop="@dimen/size30"
                android:textColorHint="@color/grayText"
                style="@style/AppTheme_EditText"
                android:tooltipText="@string/email_text">
                <EditText
                    android:id="@+id/etForgotEmail"
                    android:hint="@string/email_text"
                    android:drawableEnd="@drawable/ic_email"
                    android:drawablePadding="@dimen/size4"
                    android:textColorHint="@color/grayText"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="@dimen/space_xxm"
                    android:background="@drawable/underline_shape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <FrameLayout
                android:id="@+id/flPhoneNumber"
                android:layout_marginTop="@dimen/size20"
                android:layout_marginStart="@dimen/size20"
                android:layout_marginEnd="@dimen/size20"
                app:layout_constraintTop_toBottomOf="@id/tvForgotDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/rlPhone"
                    android:layout_marginTop="@dimen/gape10"
                    android:paddingTop="@dimen/size8"
                    android:paddingBottom="@dimen/size8"
                    android:paddingStart="@dimen/gape10"
                    android:paddingEnd="@dimen/size20"
                    android:background="@drawable/button_without_back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:gravity="center"
                        android:textSize="@dimen/textSize18"
                        android:paddingStart="@dimen/size5"
                        android:paddingEnd="@dimen/size2"
                        android:id="@+id/tvForgotCountrySelected"
                        android:layout_alignBottom="@id/etForgotMobile"
                        android:layout_alignTop="@id/etForgotMobile"
                        android:layout_width="@dimen/space_super_extra_large_x_jumbo"
                        android:layout_height="match_parent"/>
                    <View
                        android:id="@+id/viewDividerForgot"
                        android:layout_width="@dimen/size1"
                        android:layout_alignBottom="@id/etForgotMobile"
                        android:layout_alignTop="@id/etForgotMobile"
                        android:background="@color/colorAccent"
                        android:layout_marginTop="@dimen/size2"
                        android:layout_marginBottom="@dimen/size2"
                        android:layout_marginEnd="@dimen/size2"
                        android:layout_toEndOf="@id/tvForgotCountrySelected"
                        android:layout_height="match_parent"/>
                    <EditText
                        android:id="@+id/etForgotMobile"
                        android:padding="@dimen/gape10"
                        android:inputType="number"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:background="@color/caldroid_white"
                        android:drawablePadding="@dimen/size4"
                        android:textColorHint="@color/grayText"
                        android:imeOptions="actionDone"
                        android:layout_toEndOf="@id/viewDividerForgot"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <TextView
                    android:text="@string/pho_number"
                    style="@style/hintStyle" />
            </FrameLayout>

            <Button
                android:id="@+id/btnForgotPassword"
                android:layout_marginTop="@dimen/size20"
                android:layout_marginBottom="@dimen/size20"
                android:layout_marginLeft="@dimen/size40"
                android:layout_marginRight="@dimen/size40"
                app:layout_constraintTop_toBottomOf="@id/flPhoneNumber"
                android:background="@drawable/button_back"
                android:text="@string/submit"
                android:textColor="@color/caldroid_white"
                android:textSize="@dimen/textSize18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>