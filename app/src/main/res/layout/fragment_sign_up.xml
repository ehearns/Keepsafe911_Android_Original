<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white">
    <include layout="@layout/background_layout"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:layout_width="0dp"
            android:background="@color/caldroid_white"
            android:id="@+id/rvAddUserImageList"
            app:layout_constraintStart_toStartOf="parent"
            android:paddingStart="@dimen/size5"
            android:paddingEnd="@dimen/size5"
            app:layout_constraintTop_toBottomOf="@+id/tool_bar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>
        <View android:layout_width="match_parent"
            android:layout_height="@dimen/size1"
            android:id="@+id/viewDash2"
            android:visibility="gone"
            android:background="@color/colorDifferent"
            app:layout_constraintTop_toBottomOf="@id/rvAddUserImageList"/>

        <TextView
            android:id="@+id/tvAddMemberTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/str_add_new_member"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size5"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/colorAccent"
            app:layout_constraintTop_toBottomOf="@id/viewDash2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <!--<RelativeLayout
                android:visibility="gone"
                android:id="@+id/rlAddUserAddUser"
                app:layout_constraintStart_toEndOf="@id/rvAddUserImageList"
                app:layout_constraintBottom_toBottomOf="@id/rvAddUserImageList"
                app:layout_constraintTop_toBottomOf="@+id/tool_bar"
                android:background="@color/caldroid_white"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_height="0dp">
            <ImageView
                    android:id="@+id/ivAddUUserPlus"
                    android:src="@drawable/ic_plus"
                    android:layout_margin="@dimen/gape10"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/size45"
                    android:layout_height="@dimen/size45"/>
        </RelativeLayout>-->

        <ScrollView
            app:layout_constraintTop_toBottomOf="@id/tvAddMemberTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingBottom="@dimen/gape10"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:paddingStart="@dimen/size20"
                android:paddingEnd="@dimen/size20"
                android:paddingBottom="@dimen/space_jumbo"
                android:layout_height="wrap_content">
                <RelativeLayout
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/rl_image"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvSignUpTitle"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerVertical="true"
                        android:text="@string/sign_up"
                        android:textSize="@dimen/textSize26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdv_profile_image"
                        android:layout_width="@dimen/size100"
                        android:layout_height="@dimen/size100"
                        android:layout_margin="@dimen/gape10"
                        app:roundAsCircle="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/upload_profile_green"
                        app:actualImageScaleType="centerCrop"
                        app:roundingBorderColor="@color/colorPrimary"
                        app:roundingBorderWidth="@dimen/size1"/>
                    <ImageView
                        android:id="@+id/img_nphotoUpload"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:layout_marginBottom="@dimen/size5"
                        android:layout_alignBottom="@id/sdv_profile_image"
                        android:layout_alignStart="@id/sdv_profile_image"
                        android:layout_alignLeft="@id/sdv_profile_image"
                        android:src="@drawable/ic_photo_upload"/>
                    <ImageView
                        android:id="@+id/imgPhotoUpload"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"
                        android:layout_marginBottom="@dimen/size5"
                        android:layout_alignBottom="@id/sdv_profile_image"
                        android:layout_alignEnd="@id/sdv_profile_image"
                        android:layout_alignRight="@id/sdv_profile_image"
                        android:src="@drawable/ic_photo_upload"/>
                </RelativeLayout>
                <Button
                    android:id="@+id/btnFacebookSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_facebook_f"
                    android:textSize="@dimen/textSize22"
                    android:paddingStart="@dimen/size20"
                    android:paddingBottom="@dimen/size5"
                    android:paddingEnd="@dimen/size5"
                    android:paddingTop="@dimen/size5"
                    android:visibility="gone"
                    android:text="@string/str_facebook_signup"
                    android:layout_marginTop="@dimen/size20"
                    android:textColor="@color/caldroid_white"
                    android:background="@drawable/button_facebook_back"
                    app:layout_constraintTop_toBottomOf="@+id/rl_image"/>

                <TextView
                    android:id="@+id/tvFacebookOr"
                    android:layout_marginTop="@dimen/gape10"
                    android:text="@string/or"
                    android:visibility="gone"
                    android:textSize="@dimen/textSize20"
                    android:textAllCaps="true"
                    android:textColor="@color/Date_bg"
                    app:layout_constraintStart_toStartOf="@id/btnFacebookSignUp"
                    app:layout_constraintEnd_toEndOf="@id/btnFacebookSignUp"
                    app:layout_constraintTop_toBottomOf="@+id/btnFacebookSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/flSignUserName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/rl_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignUserName"
                        android:inputType="textPersonName|textCapWords"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:paddingRight="@dimen/size50"
                        android:textColorHint="@color/grayText"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/btnVerifyUsername"
                        android:text="@string/verify"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/album_dp_10"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgVerified"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/size5"
                        app:srcCompat="@drawable/icon_verified"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/album_dp_10"
                        android:layout_gravity="right|center"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"/>
                    <TextView
                        android:text="@string/username"
                        style="@style/hintStyle" />

                </FrameLayout>
                <TextView
                    android:id="@+id/tvUsernameError"
                    app:layout_constraintTop_toBottomOf="@id/flSignUserName"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_height="wrap_content"/>
                <FrameLayout
                    android:id="@+id/flSignFirstName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/tvUsernameError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignFirstName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="textCapWords|textPersonName"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/firstname"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignLastName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignLastName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="textCapWords|textPersonName"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/lastname"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignPhoneNumber"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_mob"
                        android:layout_marginTop="@dimen/gape10"
                        android:paddingTop="@dimen/size5"
                        android:paddingBottom="@dimen/size5"
                        android:paddingStart="@dimen/gape10"
                        android:paddingEnd="@dimen/size20"
                        android:background="@drawable/button_without_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/textSize18"
                            android:paddingStart="@dimen/size5"
                            android:paddingEnd="@dimen/size2"
                            android:id="@+id/tvCountrySelected"
                            android:layout_alignBottom="@id/etSignPhone"
                            android:layout_alignTop="@id/etSignPhone"
                            android:layout_width="@dimen/space_super_extra_large_x_jumbo"
                            android:layout_height="match_parent"/>
                        <View
                            android:id="@+id/viewDividerForgot"
                            android:layout_width="@dimen/size1"
                            android:layout_alignBottom="@id/etSignPhone"
                            android:layout_alignTop="@id/etSignPhone"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="@dimen/size2"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_marginEnd="@dimen/size2"
                            android:layout_toEndOf="@id/tvCountrySelected"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/etSignPhone"
                            android:padding="@dimen/gape10"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColorHint="@color/grayText"
                            android:imeOptions="actionNext"
                            android:drawablePadding="@dimen/size4"
                            android:background="@color/caldroid_white"
                            android:layout_toEndOf="@id/viewDividerForgot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:text="@string/pho_number"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignEmail"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignEmail"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/email_text"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignPassword"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <EditText
                            android:id="@+id/etSignPassword"
                            android:textColorHint="@color/grayText"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:layout_marginTop="@dimen/gape10"
                            android:drawableEnd="@drawable/white_eye"
                            android:background="@drawable/edittext_white_back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/password_text"
                            style="@style/hintStyle" />
                    </FrameLayout>
                    <ImageView
                        android:id="@+id/ivShowPassword"
                        android:paddingTop="@dimen/gape10"
                        android:paddingStart="@dimen/size1"
                        android:paddingEnd="@dimen/size15"
                        android:layout_gravity="end"
                        android:layout_width="wrap_content"
                        android:layout_marginEnd="@dimen/size5"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/show_card_number" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvPasswordError"
                    android:text="@string/str_password_error"
                    app:layout_constraintTop_toBottomOf="@id/flSignPassword"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:id="@+id/flSignConfirmPassword"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/tvPasswordError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignCPassword"
                        android:layout_marginTop="@dimen/gape10"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/c_passsword"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignReferral"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignReferralCode"
                        android:layout_marginTop="@dimen/gape10"
                        android:singleLine="true"
                        android:maxLength="8"
                        android:inputType="textPersonName|textCapWords"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgReferralVerified"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/size5"
                        app:srcCompat="@drawable/icon_verified"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/album_dp_10"
                        android:layout_gravity="right|center"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"/>

                    <TextView
                        android:text="@string/referral_text"
                        style="@style/hintStyle" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvReferralError"
                    app:layout_constraintTop_toBottomOf="@id/flSignReferral"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_height="wrap_content"/>

                <FrameLayout
                    android:id="@+id/flSignPromotion"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/tvReferralError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignPromotion"
                        android:inputType="textPersonName|textCapWords"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:paddingRight="@dimen/size50"
                        android:textColorHint="@color/grayText"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/btnVerifyPromotion"
                        android:text="@string/apply"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/album_dp_10"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <ImageView
                        android:id="@+id/imgVerifiedPromotion"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/size5"
                        app:srcCompat="@drawable/icon_verified"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/album_dp_10"
                        android:layout_gravity="right|center"
                        android:layout_width="@dimen/size30"
                        android:layout_height="@dimen/size30"/>
                    <TextView
                        android:text="@string/promotion_text"
                        style="@style/hintStyle" />

                </FrameLayout>
                <TextView
                    android:id="@+id/tvPromotionError"
                    app:layout_constraintTop_toBottomOf="@id/flSignPromotion"
                    android:layout_marginTop="@dimen/album_dp_10"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_height="wrap_content"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rl_sms"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/tvPromotionError">
                    <TextView
                        android:id="@+id/tvSmsAlert"
                        android:text="@string/smsalert"
                        android:paddingStart="@dimen/size2"
                        android:paddingEnd="@dimen/gape10"
                        android:paddingBottom="@dimen/gape10"
                        android:paddingTop="@dimen/gape10"
                        android:textSize="@dimen/textSize18"
                        android:textColor="@color/grayText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchSignMessage"
                        android:layout_marginEnd="@dimen/space_xxm"
                        android:layout_centerVertical="true"
                        android:layout_alignEnd="@id/tvSmsAlert"
                        style="@style/SwitchCompatTheme"
                        app:track="@drawable/sms_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/flSignPingFreq"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginEnd="@dimen/size8"
                    android:layout_marginStart="@dimen/size8"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/rl_sms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etSignFrequency"
                        android:maxLength="5"
                        android:layout_marginTop="@dimen/gape10"
                        android:inputType="number"
                        android:singleLine="true"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/freq_seconds"
                        style="@style/hintStyle" />
                </FrameLayout>

                <TextView
                    android:id="@+id/tvPingFrequency"
                    android:layout_margin="@dimen/space_xxm"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/rl_sms"
                    android:background="@drawable/spinner_sign_bg"
                    android:padding="@dimen/gape10"
                    android:textSize="@dimen/textSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/btn_sign_in"
                    android:textColor="@color/caldroid_white"
                    android:background="@drawable/button_back"
                    android:text="@string/sign_up"
                    android:textSize="@dimen/textSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_xxm"
                    app:layout_constraintTop_toBottomOf="@id/flSignPingFreq"/>
                <TextView
                    android:id="@+id/tvInviteNote"
                    android:textSize="@dimen/textSize16"
                    android:text="@string/invite_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_xxm"
                    android:layout_marginBottom="@dimen/space_xm"
                    app:layout_constraintTop_toBottomOf="@+id/btn_sign_in"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>