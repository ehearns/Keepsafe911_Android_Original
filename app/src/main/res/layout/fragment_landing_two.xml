<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white"
    tools:context=".fragments.LandingTwoFragment">
    <ImageView
        android:id="@+id/ivLandingBack"
        android:layout_width="wrap_content"
        android:layout_height="?actionBarSize"
        android:paddingStart="@dimen/space_xl"
        android:paddingEnd="@dimen/size2"
        app:srcCompat="@drawable/ic_back" />
    <ImageView
        android:id="@+id/ivLandingLogo"
        android:paddingTop="@dimen/gape10"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:src="@drawable/login_icon"/>
    <ScrollView
        android:id="@+id/svLandingTwo"
        android:fillViewport="true"
        android:layout_below="@id/ivLandingLogo"
        android:layout_above="@id/llLandingTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/llLandingDetail"
            android:orientation="vertical"
            android:paddingStart="@dimen/size15"
            android:paddingEnd="@dimen/size15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="@dimen/gape10"
                android:paddingBottom="@dimen/gape10"
                android:textSize="@dimen/textSize18"
                android:singleLine="true"
                android:gravity="center"
                android:text="@string/str_landing_two_title"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tvLandingTwoDetail"
                android:textSize="@dimen/textSize16"
                android:lineSpacingExtra="@dimen/size2"
                android:text="@string/str_landing_two_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvLandingSubscription"
                android:layout_marginTop="@dimen/gape10"
                android:layout_marginBottom="@dimen/gape10"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvContinueBasic"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textSize18"
                android:padding="@dimen/gape10"
                android:text="@string/str_continue_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/svLandingTwo"
        android:layout_above="@id/llLandingTwo"
        android:gravity="bottom"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivLandingTwo"
            android:paddingTop="@dimen/gape10"
            android:src="@drawable/ic_landing_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llLandingTwo"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="1"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPrivacyPolicy"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:padding="@dimen/size15"
            android:text="@string/str_privacy_policy"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="@dimen/textSize16"
            android:drawableStart="@drawable/ic_white_blank"
            android:drawablePadding="@dimen/size5"
            android:textColor="@color/caldroid_white"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTermsCondition"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:padding="@dimen/size15"
            android:text="@string/str_terms_service"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="@dimen/textSize16"
            android:drawableStart="@drawable/ic_white_blank"
            android:drawablePadding="@dimen/size5"
            android:textColor="@color/caldroid_white"
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>