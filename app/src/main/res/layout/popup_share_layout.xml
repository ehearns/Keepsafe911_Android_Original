<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="?actionBarSize"
            android:gravity="center"
            android:text="@string/neighbour_share"
            android:id="@+id/tvShareTitle"
            android:background="@color/transparent"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.FontSemiPathView"
            android:textSize="@dimen/text_size_xl"
            android:textColor="@color/Date_bg"
            android:layout_centerHorizontal="true"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSocialMedia"
            android:layout_below="@id/tvShareTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnMemberSubmit"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/gape10"
        android:textSize="@dimen/textSize20"
        android:layout_below="@id/rvSocialMedia"
        android:padding="@dimen/size5"
        android:text="@string/str_assign"
        android:layout_marginStart="@dimen/size40"
        android:layout_marginEnd="@dimen/size40"
        android:layout_marginBottom="@dimen/size20"
        android:textColor="@color/caldroid_white"
        android:background="@drawable/button_back" />
</RelativeLayout>