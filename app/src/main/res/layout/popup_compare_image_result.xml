<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/flCompareImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:paddingBottom="@dimen/size30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvFaceMatchFoundResult"
            android:text="@string/str_no_match_found"
            android:background="@drawable/button_back_gray"
            android:textAlignment="center"
            android:textColor="@color/Date_bg"
            android:paddingTop="@dimen/size61"
            android:paddingBottom="@dimen/size80"
            android:layout_marginTop="@dimen/size50"
            android:textSize="@dimen/textSize30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivFaceMatchFoundResult"
            android:src="@drawable/ic_incorrect_mark"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/size80"
            android:layout_height="@dimen/size100"/>
    </FrameLayout>
    <Button
        android:id="@+id/btnCompareOk"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Date_bg"
        android:text="@string/ok"
        android:textSize="@dimen/textSize18"
        android:background="@drawable/green_border"
        app:layout_constraintVertical_bias="0.95" />
</androidx.constraintlayout.widget.ConstraintLayout>