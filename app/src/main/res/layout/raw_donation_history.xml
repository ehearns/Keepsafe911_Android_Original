<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/size5"
    android:background="@color/list_backcolor"
    android:paddingEnd="@dimen/size20"
    android:paddingStart="@dimen/size20"
    android:paddingTop="@dimen/size15"
    android:paddingBottom="@dimen/size15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPaymentAmount"
        android:textStyle="bold"
        android:textSize="@dimen/textSize18"
        android:textColor="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvCardNo"
        android:textStyle="bold"
        android:textSize="@dimen/textSize12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentCardNumber"
        android:textSize="@dimen/textSize12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvCardNo"
        app:layout_constraintEnd_toStartOf="@id/tvPaymentAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPayDate"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/size2"
        android:textSize="@dimen/textSize12"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentCardNumber"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentDate"
        android:layout_marginTop="@dimen/size2"
        android:textSize="@dimen/textSize12"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentCardNumber"
        app:layout_constraintEnd_toStartOf="@id/tvPaymentAmount"
        app:layout_constraintStart_toEndOf="@id/tvPayDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>