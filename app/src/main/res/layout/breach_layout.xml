<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:paddingTop="@dimen/padding2"
        android:paddingBottom="@dimen/padding2"
        android:background="@color/list_backcolor"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:background="@color/caldroid_white"
            android:padding="@dimen/size4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/ivIcon"
                android:background="@color/caldroid_middle_gray"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/size61"
                android:layout_height="@dimen/size61"/>
        <TextView
                android:id="@+id/tvBreachName"
                android:textStyle="bold"
                android:textColor="@color/Date_bg"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvBreachDomain"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvBreachName"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvBreachDate"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvBreachDomain"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvAddedDate"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvBreachDate"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvModifiedDate"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvAddedDate"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPwnCount"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvModifiedDate"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvDescription"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvPwnCount"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvDataClasses"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvDescription"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <LinearLayout
                android:id="@+id/llValidation1"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/tvDataClasses"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_marginTop="2.5dp"
                android:weightSum="3"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvVerified"
                    android:text="IsVerified"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvFabricated"
                    android:text="IsFabricated"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvSensitive"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:text="IsSensitive"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/llValidation2"
                android:visibility="gone"
                android:paddingStart="@dimen/size5"
                android:paddingEnd="@dimen/size5"
                android:layout_below="@id/llValidation1"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@id/ivIcon"
                android:layout_width="match_parent"
                android:layout_marginTop="2.5dp"
                android:weightSum="2"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/tvRetired"
                    android:text="IsRetired"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tvSpamList"
                    android:text="IsSpamList"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>