<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/size3"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llSubscription"
        android:orientation="vertical"
        android:background="@drawable/subscription_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvTypeSubs"
            android:layout_width="match_parent"
            android:paddingTop="@dimen/size5"
            android:paddingStart="@dimen/size5"
            android:paddingEnd="@dimen/size5"
            android:textSize="@dimen/textSize18"
            android:gravity="center"
            android:textColor="@color/caldroid_white"
            android:background="@drawable/subscription_type_back"
            android:layout_height="@dimen/size61"/>

        <TextView
            android:id="@+id/tvPrice"
            android:textSize="@dimen/textSize24"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="@dimen/space_xm"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size70"/>

        <TextView
            android:id="@+id/tvType"
            android:paddingBottom="@dimen/size5"
            android:paddingStart="@dimen/size5"
            android:paddingEnd="@dimen/size5"
            android:textSize="@dimen/textSize14"
            android:gravity="center"
            android:layout_margin="@dimen/size1"
            android:textColor="@color/caldroid_white"
            android:background="@drawable/subscription_bottom_back"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size50"/>

    </LinearLayout>
</LinearLayout>