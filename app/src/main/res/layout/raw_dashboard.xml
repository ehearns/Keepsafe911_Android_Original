<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/clParentRaw"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/flParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivDashBoard"
            android:layout_gravity="center"
            android:layout_width="@dimen/size100"
            android:layout_height="@dimen/size100"/>

        <TextView android:id="@+id/tvLiveMember"
            android:layout_width="@dimen/size20"
            android:layout_height="@dimen/size20"
            android:layout_margin="@dimen/size2"
            android:textSize="@dimen/textSize16"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/imagetext_circle_white"
            android:layout_gravity="end"/>
    </FrameLayout>
    <TextView android:id="@+id/tvDashBoardName"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_below="@id/flParent"
        android:layout_width="wrap_content"
        android:layout_alignEnd="@id/flParent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/flParent"
        android:textSize="@dimen/text_size_s"/>
    <FrameLayout
        android:layout_below="@id/tvDashBoardName"
        android:layout_alignEnd="@id/flParent"
        android:layout_alignStart="@id/flParent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvORDivision"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="@string/or"
            android:textSize="@dimen/textSize16"
            android:visibility="gone"
            android:textColor="@color/caldroid_black"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingTop="@dimen/size20"
            android:paddingBottom="@dimen/size30" />
        <Button
            android:id="@+id/btnCompare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="@dimen/textSize16"
            android:padding="@dimen/size5"
            android:layout_gravity="center"
            android:text="@string/str_compare"
            android:visibility="gone"
            android:layout_marginTop="@dimen/size20"
            android:layout_marginBottom="@dimen/size30"
            android:textColor="@color/Date_bg"
            android:background="@drawable/button_without_back" />

    </FrameLayout>
</RelativeLayout>