<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/caldroid_white"
    tools:context=".fragments.homefragment.profile.EditProfileFragment">
    <include layout="@layout/background_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>
        <ScrollView
            android:fillViewport="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:paddingBottom="@dimen/size5"
                android:paddingTop="@dimen/size5"
                android:paddingStart="@dimen/size20"
                android:paddingEnd="@dimen/size20"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/sdvUserImage"
                        android:layout_width="@dimen/size150"
                        android:layout_height="@dimen/size150"
                        android:layout_margin="@dimen/gape10"
                        app:roundAsCircle="true"
                        android:scaleType="fitCenter"
                        android:layout_centerInParent="true"
                        app:progressBarImage="@drawable/pic1"
                        android:background="@drawable/upload_profile_green"
                        app:roundingBorderColor="@color/colorPrimary"
                        app:roundingBorderWidth="@dimen/size1"/>
                    <ImageView
                        android:id="@+id/ivEditProfile"
                        android:layout_width="@dimen/size40"
                        android:layout_height="@dimen/size40"
                        android:layout_marginBottom="@dimen/gape10"
                        android:src="@drawable/ic_photo_upload"
                        android:layout_alignBottom="@+id/sdvUserImage"
                        android:layout_alignEnd="@+id/sdvUserImage"
                        android:layout_alignRight="@+id/sdvUserImage"/>
                </RelativeLayout>
                <FrameLayout
                    android:id="@+id/flSignUserName"
                    android:layout_marginTop="@dimen/size4"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/rl_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etEditUserName"
                        android:inputType="textPersonName|textCapWords"
                        android:imeOptions="actionNext"
                        android:textColorHint="@color/grayText"
                        android:drawablePadding="@dimen/size4"
                        android:focusableInTouchMode="false"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/username"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignFirstName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etEditFirstName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="textCapWords|textPersonName"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/firstname"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignLastName"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etEditLastName"
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="textCapWords|textPersonName"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/lastname"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignPhoneNumber"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/rl_mob"
                        android:layout_marginTop="@dimen/gape10"
                        android:paddingTop="@dimen/size5"
                        android:paddingBottom="@dimen/size5"
                        android:paddingStart="@dimen/gape10"
                        android:paddingEnd="@dimen/size20"
                        android:background="@drawable/button_without_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:gravity="center"
                            android:textSize="@dimen/textSize18"
                            android:paddingStart="@dimen/size5"
                            android:paddingEnd="@dimen/size2"
                            android:id="@+id/tvEditCountrySelected"
                            android:layout_alignBottom="@id/etEditPhoneNumber"
                            android:layout_alignTop="@id/etEditPhoneNumber"
                            android:layout_width="@dimen/space_super_extra_large_x_jumbo"
                            android:layout_height="match_parent"/>
                        <View
                            android:id="@+id/viewDividerForgot"
                            android:layout_width="@dimen/size1"
                            android:layout_alignBottom="@id/etEditPhoneNumber"
                            android:layout_alignTop="@id/etEditPhoneNumber"
                            android:background="@color/colorAccent"
                            android:layout_marginTop="@dimen/size2"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_marginEnd="@dimen/size2"
                            android:layout_toEndOf="@id/tvEditCountrySelected"
                            android:layout_height="match_parent"/>
                        <EditText
                            android:id="@+id/etEditPhoneNumber"
                            android:padding="@dimen/gape10"
                            android:inputType="number"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:textColorHint="@color/grayText"
                            android:imeOptions="actionNext"
                            android:drawablePadding="@dimen/size4"
                            android:background="@color/caldroid_white"
                            android:layout_toEndOf="@id/viewDividerForgot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <TextView
                        android:text="@string/pho_number"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flSignEmail"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flReferral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/etEditEmail"
                        android:inputType="textEmailAddress"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text="@string/email_text"
                        style="@style/hintStyle" />
                </FrameLayout>
                <FrameLayout
                    android:id="@+id/flReferral"
                    android:layout_marginTop="@dimen/size2"
                    android:layout_marginBottom="@dimen/size2"
                    app:layout_constraintTop_toBottomOf="@id/flSignPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvRefferal"
                        android:singleLine="true"
                        android:textSize="@dimen/textSize18"
                        android:textColor="@color/caldroid_black"
                        android:layout_marginTop="@dimen/gape10"
                        android:background="@drawable/edittext_white_back"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/btnCopy"
                        android:text="@string/text_copy"
                        android:visibility="visible"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginRight="@dimen/album_dp_10"
                        android:layout_gravity="right|center"
                        android:layout_marginTop="@dimen/size5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:text="@string/referral_text"
                        style="@style/hintStyle" />
                </FrameLayout>
                <Button
                    android:id="@+id/btnUpdateProfile"
                    android:layout_marginTop="@dimen/size28"
                    android:layout_marginStart="@dimen/gape10"
                    android:layout_marginEnd="@dimen/gape10"
                    android:textColor="@color/caldroid_white"
                    android:background="@drawable/button_back"
                    android:text="@string/submit"
                    android:textSize="@dimen/textSize18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>