<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/clShareOption"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
            android:id="@+id/ivShareOption"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/size61"
            android:layout_height="@dimen/size61"/>

    <TextView
            android:id="@+id/tvShareOption"
            android:textSize="@dimen/textSize12"
            android:layout_marginTop="@dimen/size5"
            app:layout_constraintTop_toBottomOf="@id/ivShareOption"
            app:layout_constraintEnd_toEndOf="@id/ivShareOption"
            app:layout_constraintStart_toStartOf="@id/ivShareOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>