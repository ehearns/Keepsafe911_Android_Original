<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/edittext_shadow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPaymentType"
        android:textSize="@dimen/textSize18"
        android:textColor="@color/Date_bg"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentFrequency"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentAmount"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentFrequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentUserCount"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentStartDate"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentUserCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvPaymentEndDate"
        app:layout_constraintTop_toBottomOf="@id/tvPaymentStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/tvPaymentEndDate"
        android:background="@color/caldroid_white"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="@dimen/size5"
        android:paddingTop="@dimen/size5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/ivGenerateReport"
            android:background="@color/colorPrimary"
            android:padding="@dimen/size5"
            android:layout_margin="@dimen/size1"
            app:srcCompat="@drawable/ic_generate_report"
            android:layout_width="@dimen/size56"
            android:layout_height="@dimen/size40"/>
        <ImageView
            android:id="@+id/ivViewUser"
            android:background="@color/Date_bg"
            android:padding="@dimen/size5"
            android:visibility="gone"
            android:layout_margin="@dimen/size1"
            app:srcCompat="@drawable/white_eye"
            android:layout_width="@dimen/size56"
            android:layout_height="@dimen/size40"/>

        <ImageView
            android:id="@+id/ivRepeatPayment"
            android:background="@color/Date_bg"
            android:padding="@dimen/size5"
            android:visibility="gone"
            android:layout_margin="@dimen/size1"
            android:src="@drawable/ic_repeat_payment"
            android:layout_width="@dimen/size56"
            android:layout_height="@dimen/size40"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>