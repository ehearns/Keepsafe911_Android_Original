<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/caldroid_white"
    tools:context=".fragments.donation.DonationFragment">

    <include layout="@layout/background_layout"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/tool_bar"
            layout="@layout/toolbar_header"/>

        <ScrollView
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvMakeDonation"
                    android:layout_marginTop="@dimen/gape10"
                    android:layout_marginEnd="@dimen/gape10"
                    android:layout_marginStart="@dimen/gape10"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize12"
                    android:textAllCaps="true"
                    android:text="@string/str_make_donation"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvDonationAmount"
                    android:layout_marginTop="@dimen/gape10"
                    android:layout_marginEnd="@dimen/gape10"
                    android:layout_marginStart="@dimen/gape10"
                    app:layout_constraintTop_toBottomOf="@id/tvMakeDonation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/etDonationAmount"
                    android:layout_marginTop="@dimen/gape10"
                    android:layout_marginEnd="@dimen/gape10"
                    android:layout_marginStart="@dimen/gape10"
                    app:layout_constraintTop_toBottomOf="@id/rvDonationAmount"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="5"
                    android:visibility="gone"
                    android:imeOptions="actionDone"
                    android:drawableStart="@drawable/ic_dollar"
                    android:drawablePadding="@dimen/gape10"
                    android:background="@drawable/donation_other"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="@dimen/gape10"
                    android:id="@+id/viewDividerDonation"
                    android:background="@color/donation_divider"
                    app:layout_constraintTop_toBottomOf="@id/etDonationAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size2"/>

                <RelativeLayout
                    android:id="@+id/rlCardPayment"
                    android:focusableInTouchMode="true"
                    android:layout_margin="@dimen/gape10"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewDividerDonation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvDonationCustomerDetail"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/textSize16"
                        android:text="@string/customer_detail"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvDonationCustomerDetail"
                        android:orientation="horizontal"
                        android:id="@+id/llDonationFLName">
                        <FrameLayout
                            android:id="@+id/flDonationFirstName"
                            android:layout_marginTop="@dimen/size4"
                            android:layout_marginEnd="@dimen/size5"
                            android:layout_marginStart="@dimen/size8"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/etDonationFirstName"
                                android:inputType="textPersonName|textCapWords"
                                android:imeOptions="actionNext"
                                android:layout_marginTop="@dimen/gape10"
                                android:singleLine="true"
                                android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                                android:background="@drawable/edittext_white_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@string/pay_firstname"
                                style="@style/hintStyle" />
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/flDonationLastName"
                            android:layout_marginTop="@dimen/size4"
                            android:layout_marginEnd="@dimen/size8"
                            android:layout_marginStart="@dimen/size5"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/etDonationLastName"
                                android:inputType="textPersonName|textCapWords"
                                android:imeOptions="actionNext"
                                android:digits="QWERTYUIOPASDFGHJKLZXCVBNMqwertyuiopasdfghjklzxcvbnm"
                                android:layout_marginTop="@dimen/gape10"
                                android:singleLine="true"
                                android:background="@drawable/edittext_white_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                style="@style/hintStyle"
                                android:text="@string/pay_lastname" />
                        </FrameLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tvDonationCardDetail"
                        android:layout_below="@id/llDonationFLName"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/textSize16"
                        android:layout_centerHorizontal="true"
                        android:text="@string/card_details"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:padding="@dimen/gape10"
                        android:textAllCaps="true"
                        android:layout_height="wrap_content"/>
                    <FrameLayout
                        android:id="@+id/flDonationCardNumber"
                        android:layout_marginStart="@dimen/gape10"
                        android:layout_marginEnd="@dimen/gape10"
                        android:layout_below="@id/tvDonationCardDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:drawableEnd="@drawable/show_card_number"
                            android:id="@+id/etDonationCardNumber"
                            android:inputType="number"
                            android:imeOptions="actionDone"
                            android:maxLength="19"
                            android:drawablePadding="@dimen/size4"
                            android:layout_marginTop="@dimen/gape10"
                            android:background="@drawable/edittext_white_back"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/card_number"
                            style="@style/hintStyle" />
                    </FrameLayout>

                    <LinearLayout
                        android:layout_below="@id/flDonationCardNumber"
                        android:orientation="horizontal"
                        android:id="@+id/llCardDonationMonthYear"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/flFreqCardMonth"
                            android:layout_marginTop="@dimen/size4"
                            android:layout_marginEnd="@dimen/size5"
                            android:layout_marginStart="@dimen/size8"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/etCardDonationMonth"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:maxLength="2"
                                android:focusableInTouchMode="false"
                                android:layout_marginTop="@dimen/gape10"
                                android:background="@drawable/edittext_white_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@string/mm"
                                style="@style/hintStyle" />
                        </FrameLayout>
                        <FrameLayout
                            android:id="@+id/flFreqCardYear"
                            android:layout_marginTop="@dimen/size4"
                            android:layout_marginEnd="@dimen/size8"
                            android:layout_marginStart="@dimen/size5"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/etCardDonationYear"
                                android:inputType="number"
                                android:imeOptions="actionNext"
                                android:maxLength="4"
                                android:focusableInTouchMode="false"
                                android:layout_marginTop="@dimen/gape10"
                                android:background="@drawable/edittext_white_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@string/yyyy"
                                style="@style/hintStyle" />
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@id/llCardDonationMonthYear"
                        android:orientation="horizontal"
                        android:id="@+id/llCardDonationCVV"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/flCardDonationCVV"
                            android:layout_marginTop="@dimen/size4"
                            android:layout_marginEnd="@dimen/size5"
                            android:layout_marginStart="@dimen/size8"
                            android:layout_marginBottom="@dimen/size2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/etCardDonationCVV"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:maxLength="3"
                                android:drawableEnd="@drawable/ic_cvv"
                                android:drawablePadding="@dimen/size4"
                                android:layout_marginTop="@dimen/gape10"
                                android:background="@drawable/edittext_white_back"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:text="@string/cvv"
                                style="@style/hintStyle" />
                        </FrameLayout>
                        <TextView
                            android:id="@+id/tvDonationCVV"
                            android:layout_gravity="center"
                            android:text="@string/what_is_cvv"
                            android:layout_weight="1"
                            android:textColor="@color/Date_bg"
                            android:textSize="@dimen/textSize16"
                            android:layout_marginTop="@dimen/size5"
                            android:layout_marginStart="@dimen/size5"
                            android:layout_marginEnd="@dimen/gape10"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <Button
                        android:layout_below="@id/llCardDonationCVV"
                        android:id="@+id/btnCardDonation"
                        android:layout_marginTop="@dimen/gape10"
                        android:layout_marginStart="@dimen/gape10"
                        android:layout_marginEnd="@dimen/gape10"
                        android:layout_marginBottom="@dimen/gape10"
                        android:textColor="@color/caldroid_white"
                        android:background="@drawable/button_back"
                        android:text="@string/str_help_child"
                        android:textSize="@dimen/textSize18"
                        android:textAllCaps="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>