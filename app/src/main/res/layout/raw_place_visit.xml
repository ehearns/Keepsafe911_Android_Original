<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/list_backcolor"
        android:paddingTop="@dimen/size5"
        android:paddingBottom="@dimen/size5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingTop="@dimen/gape10"
            android:paddingStart="@dimen/size20"
            android:paddingEnd="@dimen/size20"
            android:paddingBottom="@dimen/gape10"
            android:background="@color/caldroid_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rlPlaces">
        <ImageView
                android:id="@+id/ivPlaceVisit"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_width="@dimen/size100"
                android:layout_height="@dimen/size100"/>
        <TextView
                android:id="@+id/tvPlaceVisitName"
                android:textSize="@dimen/textSize18"
                android:layout_marginTop="@dimen/gape10"
                android:layout_toStartOf="@id/ivPlaceVisit"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVisitRating"
                android:textSize="@dimen/textSize16"
                android:layout_below="@id/tvPlaceVisitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <RatingBar
                android:layout_alignTop="@id/tvPlaceVisitRating"
                android:layout_alignBottom="@id/tvPlaceVisitRating"
                android:layout_below="@id/tvPlaceVisitName"
                android:layout_marginStart="@dimen/gape10"
                android:layout_width="wrap_content"
                android:stepSize="0.1"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/caldroid_darker_yellow"
                android:secondaryProgressTint="@color/caldroid_darker_yellow"
                android:numStars="5"
                android:layout_toEndOf="@id/tvPlaceVisitRating"
                android:layout_height="wrap_content"
                android:id="@+id/rbPlaceVisitRating"/>
        <TextView
                android:id="@+id/tvYelpPlaceReview"
                android:textSize="@dimen/textSize16"
                android:layout_marginStart="@dimen/gape10"
                android:layout_toEndOf="@id/rbPlaceVisitRating"
                android:layout_below="@id/tvPlaceVisitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVisitDistance"
                android:textSize="@dimen/textSize16"
                android:layout_marginStart="@dimen/gape10"
                android:layout_toStartOf="@id/ivPlaceVisit"
                android:layout_toEndOf="@id/tvYelpPlaceReview"
                android:layout_below="@id/tvPlaceVisitName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVPhone"
                android:text="@string/str_phone"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tvPlaceVisitDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVisitPhone"
                android:layout_marginTop="@dimen/size5"
                android:autoLink="all"
                android:layout_toStartOf="@id/ivPlaceVisit"
                android:layout_below="@id/tvPlaceVisitDistance"
                android:layout_toEndOf="@id/tvPlaceVPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVPrice"
                android:text="@string/str_price"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tvPlaceVisitPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVisitPrice"
                android:layout_marginTop="@dimen/size5"
                android:layout_toStartOf="@id/ivPlaceVisit"
                android:layout_below="@id/tvPlaceVisitPhone"
                android:layout_toEndOf="@id/tvPlaceVPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVCategory"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tvPlaceVisitPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVisitCategory"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tvPlaceVisitPrice"
                android:layout_toEndOf="@id/tvPlaceVCategory"
                android:layout_width="wrap_content"
                android:layout_toStartOf="@id/ivPlaceVisit"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVAddress"
                android:text="@string/str_address"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tvPlaceVisitCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/tvPlaceVisitAddress"
                android:layout_marginTop="@dimen/size5"
                android:layout_below="@id/tvPlaceVisitCategory"
                android:layout_toEndOf="@id/tvPlaceVAddress"
                android:layout_toStartOf="@id/ivPlaceVisit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>