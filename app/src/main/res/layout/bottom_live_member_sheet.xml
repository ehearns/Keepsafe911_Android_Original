<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/bottom_live_member_filter"
    android:background="@color/caldroid_white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/size50"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/topFrame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/rlFilterModule"
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvMapPinFilter"
                android:textSize="@dimen/textSize18"
                android:textAppearance="@style/TextAppearance.FontSemiPathView"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/tvMapPinFilterText"
                android:layout_width="match_parent"
                android:padding="@dimen/size15"
                android:textColor="@color/caldroid_white"
                android:gravity="center|start"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ivCancelFilter"
                android:visibility="gone"
                android:src="@drawable/ic_cancel_round"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/gape10"
                android:layout_alignTop="@id/tvMapPinFilter"
                android:layout_alignBottom="@id/tvMapPinFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_alignParentEnd="true"
                android:id="@+id/tvMapPinFilterText"
                android:textSize="@dimen/textSize14"
                android:paddingTop="@dimen/size15"
                android:paddingStart="@dimen/gape10"
                android:paddingEnd="@dimen/gape10"
                android:gravity="center"
                android:paddingBottom="@dimen/size15"
                android:drawablePadding="@dimen/gape10"
                android:drawableStart="@drawable/ic_burger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tvCloseMapFilter"
            android:visibility="gone"
            android:paddingStart="@dimen/gape10"
            android:paddingEnd="@dimen/gape10"
            android:layout_gravity="center"
            android:background="@drawable/ic_down_arraw"
            android:paddingBottom="@dimen/size30"
            android:layout_width="@dimen/size61"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/gape10"
        android:id="@+id/rvMapPinFilter"
        app:layout_constraintTop_toBottomOf="@id/topFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <!--<Button
        android:id="@+id/btn_cancel_filter"
        android:visibility="gone"
        android:textColor="@android:color/white"
        android:background="@color/text_lgray"
        android:text="@string/cancel_filter"
        android:textSize="@dimen/textSize18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_xxm"
        app:layout_constraintTop_toBottomOf="@+id/rvMapPinFilter"
        app:layout_constraintBottom_toBottomOf="parent"/>-->
</androidx.constraintlayout.widget.ConstraintLayout>