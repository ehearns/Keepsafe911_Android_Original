<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tool_bar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@android:color/transparent">

    <FrameLayout
        android:id="@+id/flFront"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_home_close"
            app:srcCompat="@drawable/ic_x_close"
            android:layout_width="wrap_content"
            android:paddingStart="@dimen/space_xl"
            android:paddingEnd="@dimen/size2"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/space_xl"
            android:paddingEnd="@dimen/size2"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_back" />
        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/space_xxxl"
            android:paddingEnd="@dimen/size2"
            android:visibility="gone"
            android:src="@drawable/ic_hamburger" />
    </FrameLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tvHeader"
        android:layout_toEndOf="@id/flFront"
        android:layout_toStartOf="@id/flBack"
        android:background="@color/transparent"
        android:layout_centerVertical="true"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.FontBoldPathView"
        android:textSize="@dimen/textSize16"
        android:textColor="@color/colorPrimary"
        android:layout_centerInParent="true"/>
    <EditText
        android:id="@+id/etSearchChild"
        android:drawablePadding="@dimen/size5"
        android:background="@drawable/search_edittext"
        android:textSize="@dimen/textSize18"
        android:layout_margin="@dimen/gape10"
        android:layout_toEndOf="@id/flFront"
        android:layout_toStartOf="@id/flBack"
        android:visibility="gone"
        android:singleLine="true"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/ivMenuLogo"
        android:visibility="gone"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textSize="@dimen/textSize16"
        android:textColor="@color/colorPrimary"
        android:textAppearance="@style/TextAppearance.FontBoldPathView"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <FrameLayout
        android:id="@+id/flBack"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/btnGO"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/colorAccent"
            android:text="@string/go"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"
            android:paddingStart="@dimen/size2"
            android:paddingEnd="@dimen/space_xl"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvLiveCount"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/caldroid_white"
            android:gravity="center"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagetext_circle_yellow" />
        <ImageView
            android:id="@+id/ivPlus"
            android:src="@drawable/ic_add"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:paddingEnd="@dimen/gape10"
            android:paddingStart="@dimen/size2"
            android:scaleType="center"
            android:visibility="gone"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_close"
            app:srcCompat="@drawable/ic_x_close"
            android:layout_width="wrap_content"
            android:paddingEnd="@dimen/space_xl"
            android:paddingStart="@dimen/size2"
            android:visibility="gone"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/ivDeleteUser"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_trash"
            android:paddingEnd="@dimen/space_xl"
            android:paddingStart="@dimen/size2"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvNext"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/colorAccent"
            android:text="@string/next"
            android:textStyle="bold"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:paddingStart="@dimen/size2"
            android:paddingEnd="@dimen/space_l"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tvCancel"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/colorAccent"
            android:text="@string/cancel"
            android:textStyle="bold"
            android:gravity="center"
            android:singleLine="true"
            android:visibility="gone"
            android:paddingStart="@dimen/size2"
            android:paddingEnd="@dimen/gape10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/tvMap"
            android:src="@drawable/ic_tool_map"
            android:paddingEnd="@dimen/space_xxxl"
            android:paddingStart="@dimen/size4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/tvShare"
            android:src="@drawable/ic_share"
            android:paddingEnd="@dimen/space_xxxl"
            android:paddingStart="@dimen/size4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvSave"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/colorAccent"
            android:paddingEnd="@dimen/space_l"
            android:paddingStart="@dimen/size2"
            android:gravity="center"
            android:textStyle="bold"
            android:visibility="gone"
            android:text="@string/str_save"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tvList"
            android:textSize="@dimen/textSize16"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:visibility="gone"
            android:paddingEnd="@dimen/space_xl"
            android:paddingStart="@dimen/size2"
            android:gravity="center"
            android:text="@string/str_list"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/ivSearchChild"
            android:src="@drawable/ic_search"
            android:paddingEnd="@dimen/space_xxxl"
            android:paddingStart="@dimen/size4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/ivLogout"
            android:src="@drawable/logout_fcc"
            android:paddingEnd="@dimen/space_xxxl"
            android:paddingStart="@dimen/size4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/ivAssign"
            android:src="@drawable/ic_invite"
            android:paddingEnd="@dimen/space_xxxl"
            android:paddingStart="@dimen/size4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/ivLive"
            android:src="@drawable/ic_live"
            android:paddingEnd="@dimen/space_xxxl"
            android:paddingStart="@dimen/size4"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </FrameLayout>
</RelativeLayout>