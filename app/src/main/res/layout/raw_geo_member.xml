<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/size5"
    android:background="@drawable/underline_shape_gray"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_toStartOf="@id/ivRemoveGeoMember"
        android:id="@+id/tvGeoMemberName"
        android:layout_centerVertical="true"
        android:textSize="@dimen/textSize16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_centerInParent="true"
        android:id="@+id/ivRemoveGeoMember"
        android:layout_alignParentEnd="true"
        android:paddingEnd="@dimen/size5"
        android:paddingStart="@dimen/size5"
        android:paddingBottom="@dimen/padding2"
        android:paddingTop="@dimen/padding2"
        android:src="@drawable/ic_remove_member"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>