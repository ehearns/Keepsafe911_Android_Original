<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLiveMemberFilter"
    android:layout_width="wrap_content"
    android:gravity="center"
    android:padding="@dimen/size5"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvLiveMemberFilter"
        app:cardCornerRadius="@dimen/gape10"
        app:cardElevation="0.2dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_width="@dimen/size61"
        app:cardBackgroundColor="@color/caldroid_white"
        android:layout_height="@dimen/size61">
        <ImageView
            android:id="@+id/ivLiveMemberFilter"
            android:scaleType="center"
            android:src="@drawable/local_hospital"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textAlignment="center"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/cvLiveMemberFilter"
        android:id="@+id/tvLiveMemberFilterName"
        android:textSize="@dimen/textSize12"
        android:lines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>