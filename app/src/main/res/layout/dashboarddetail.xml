<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cl_parent"
        android:background="@color/caldroid_white">

    <TextView
            android:id="@+id/tvTitle"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.FontSemiPathView"
            android:textSize="@dimen/textSize16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="@dimen/space_xm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvDetails"
            android:textSize="@dimen/textSize14"
            android:padding="@dimen/space_s"
            android:scrollbars="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAppearance="@style/TextAppearance.FontmediumPathView"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tvNext"
            android:textSize="@dimen/textSize16"
            android:padding="@dimen/gape10"
            android:text="@string/next"
            android:visibility="gone"
            android:layout_marginStart="@dimen/size5"
            android:textColor="@color/Date_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>